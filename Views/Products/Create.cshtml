@model Prod_Manger.Models.Domain.ProductModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>               
                <select data-val="true" id="ProductCategory" name="Category" class="form-control">
                    <option>Select a category</option>
                    @foreach (var category in ViewBag.dataCategory.CategoryName)
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory1" class="control-label"></label>
                <select data-val="true" id="SubCategory1" name="SubCategory1" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="SubCategory1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buc" class="control-label"></label>
                <input asp-for="Buc" class="form-control" />
                <span asp-validation-for="Buc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyPriceVAT" class="control-label"></label>
                <input asp-for="BuyPriceVAT" class="form-control" />
                <span asp-validation-for="BuyPriceVAT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyPriceNoVAT" class="control-label"></label>
                <input asp-for="BuyPriceNoVAT" class="form-control" />
                <span asp-validation-for="BuyPriceNoVAT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellPriceVAT" class="control-label"></label>
                <input asp-for="SellPriceVAT" class="form-control" />
                <span asp-validation-for="SellPriceVAT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellPriceNoVAT" class="control-label"></label>
                <input asp-for="SellPriceNoVAT" class="form-control" />
                <span asp-validation-for="SellPriceNoVAT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyDate" class="control-label"></label>
                <input asp-for="BuyDate" class="form-control" />
                <span asp-validation-for="BuyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellDate" class="control-label"></label>
                <input asp-for="SellDate" class="form-control" />
                <span asp-validation-for="SellDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
